{
  "name": "project-bundler",
  "displayName": "Project Bundler (Context Builder for AI)",
  "description": "One-click project context builder. Pack project files into a single token-optimized bundle for LLMs.",
  "version": "0.1.3",
  "publisher": "vitorioui",
  "icon": "icon.png",
  "keywords": [
    "ai",
    "chatgpt",
    "gemini",
    "claude",
    "deepseek",
    "llm",
    "context",
    "bundle",
    "prompt engineering",
    "project structure",
    "code analysis",
    "copilot",
    "token optimizer"
  ],
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other", "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Vitorio-ui/project-bundler"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Context Builder",
      "properties": {
        "projectBundler.includeFullTree": {
          "type": "boolean",
          "default": true,
          "description": "%config.includeFullTree%" 
        },
        "projectBundler.maxFiles": {
          "type": "number",
          "default": 10000,
          "description": "%config.maxFiles%"
        },
        "projectBundler.language": {
          "type": "string",
          "default": "auto",
          "enum": ["auto", "en", "ru", "es", "de", "fr", "ja", "zh-cn"],
          "description": "%config.language%"
        },
        "projectBundler.customExcludes": {
          "type": "array",
          "default": [],
          "description": "%config.customExcludes%"
        },
        "projectBundler.binaryExtensions": {
          "type": "array",
          "default": [
            ".png", ".jpg", ".jpeg", ".gif", ".bmp", ".ico", ".svg", ".webp",
            ".mp3", ".wav", ".mp4", ".avi", ".mov", ".mkv",
            ".zip", ".tar", ".gz", ".7z", ".rar",
            ".pdf", ".doc", ".docx", ".xls", ".xlsx", ".ppt", ".pptx",
            ".exe", ".dll", ".so", ".dylib", ".bin", ".dat", ".db", ".sqlite",
            ".pyc", ".class", ".jar", ".war"
          ],
          "description": "%config.binaryExtensions%",
          "markdownDescription": "%config.binaryExtensions%"
        }
      }
    },
    "commands": [
      {
        "command": "project-bundler.runWorkspaceBundle",
        "title": "%command.fullProject%"
      },
      {
        "command": "project-bundler.enterLicense",
        "title": "%command.license%"
      },
      {
        "command": "project-bundler.bundleSelected",
        "title": "%command.selected%"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "project-bundler.bundleSelected",
          "when": "explorerResourceIsFolder || resourceScheme == 'file'",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "project-bundler.bundleSelected",
          "when": "explorerResourceIsFolder || resourceScheme == 'file'",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "ignore": "^7.0.5"
  }
}
